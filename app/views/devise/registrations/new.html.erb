


<div class="container">

　<div class="row sign_up_box">

      　<div class="col-md-8 col-md-offset-2">


            <h2>ユーザー情報</h2>


            　　　 <div class="row user_information_box">   

                    
                      
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                            <%= render "devise/shared/error_messages", resource: resource %>

                                  <div class="field_name">  
                                        
                                        <%= f.label :ニックネーム %>
                                        <br />
                                        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
                                      
                                  </div>


                                  <div class="field_name">  

                                          <%= f.label :郵便番号 %>
                                          <br>
                                          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                                  
                                  </div>

                                  <div class="field_name">
                                
                                      <%= f.label :住所 %>
                                        <br>
                                      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>

                                  </div>


                                  <div class="field_name">

                                    <%= f.label :電話番号（ハイフンを含む） %>
                                      <br>
                                    <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>

                                  </div>

                                  <div class="field_name">

                                    <%= f.label :メールアドレス %>
                                      <br>
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

                                  </div>


                                  <div class="field_name">
                                        
                                        <%= f.label :パスワード %>
                                          
                                          <% if @minimum_password_length %>
                                              <em>(<%= @minimum_password_length %>文字以上)</em>
                                          <% end %>
                                        
                                        <br>

                                        <%= f.password_field :password, autocomplete: "new-password" %>
                                      
                                  </div>

                                  <div class="field_name">
                                          <%= f.label :パスワード確認 %>
                                          <br>
                                          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                                  </div>

                          
                            <div class="actions">
                              <%= f.submit "会員登録する" %>
                            </div>



                        <% end %>

                      <%= render "devise/shared/links" %>
                    
                    </div>
                    
                  </div>            

       </div>

  </div>

</div>
