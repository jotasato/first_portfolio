<%= render 'layouts/users_header'%>


     <div class="row">
        <div class="col-md-4 col-md-offset-4 menu-logo">
            <h1>SIGN UP</h1>
              <span class="moji">新規登録</span>
              <br>
              <br>
              <br>   
        </div>     
      </div>


<div class="sign_up-box clearfix">
  <div class="container sign_up">
    <div class="row sign_up_box clearfix">
      <div class="col-md-8 col-md-offset-2">
        <div class="box_title">
            <div class="row user_information_box">   
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= render "layouts/error_messages", model: resource %>
                    <div class="field_name">  
                        <%= f.label :ニックネーム %>
                          <br>
                        <span class="must">必須</span><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
                    </div>
                    
                    <div class="field_name">  
                        <%= f.label :郵便番号 %>
                          <br>
                        <span class="free">任意</span><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                    </div>

                    <div class="field_name">
                        <%= f.label :住所 %>
                          <br>
                        <span class="free">任意</span><%= f.text_field :address, autofocus: true, autocomplete: "address" %>
                    </div>
                    
                    <div class="field_name">
                        <%= f.label :電話番号（ハイフンを含む） %>
                          <br>
                        <span class="free">任意</span><%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
                    </div>

                    <div class="field_name">
                        <%= f.label :メールアドレス %>
                          <br>
                        <span class="must">必須</span><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>

                    <div class="field_name">
                          <%= f.label :パスワード %>
                                                    
                        <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %>文字以上)</em>
                        <% end %>
                            <br>

                        <span class="must">必須</span><%= f.password_field :password, autocomplete: "new-password" %>                         
                    </div>

                    <div class="field_name">
                        <%= f.label :パスワード確認 %>
                            <br>
                        <span class="must">必須</span><%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>

                      <div class="actions">
                          <%= f.submit "会員登録する", class: "sign_up_btn" %>
                      </div>
                
                <% end %>

                <%= render "users/shared/links" %>
                        
                   
            </div>            
        </div>
      </div>
    </div>
  </div>
</div>

  <div class="kara_box3"></div>

  <style>
  .field_with_errors{
    display: inline;
  }
    </style>