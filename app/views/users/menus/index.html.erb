<%= render 'layouts/users_header'%>



<div class="container">

     <div class="row">

        <div class="col-md-4 col-md-offset-4 menu-logo">
            <h1>MENU</h1>
            <span>メニュー</span>
        </div>      

    </div>


    <div class="row menu-all">
      
        
            
            <% @menus.each do |menu| %>
        <div class="col-md-4">
                        <%= menu.menu_name %>
                        
                    <% if menu.menu_image_id? %>
                    　　 <%= link_to menu_path(menu.id) do %>
                        　　<%= image_tag menu.menu_image_id.url, size: "200x200"  %>
                        <% end %>
                    <% else %>
                    <p>画像ないよ</p>
                    <% end %>

        </div>
            
            <% end %>
        
       

    
    </div>

</div>