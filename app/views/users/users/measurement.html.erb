<%= render 'layouts/users_header'%>


<div class="container">

        <div class="row">

            <div class="col-md-4 col-md-offset-4 measurement-logo">
                <h1>MEASURMENT</h1>
                <span class="moji">測定</span>
            </div>      

        </div>

        <div id="main">
        
                <h2 class="maintenance-logo">【メンテナンスカロリー(維持カロリー)計算】</h2>

<% if user_signed_in? %>

     <%= form_for @user, url: record_path(current_user), method: :patch do |f| %>

     　　　　<%= render 'layouts/error_messages', model: f.object %>
                        
            <table id="table_maintenance">
                <tbody>
                    <tr>
                        <th>
                        性別 
                        </th>
                        <td>         
                            　<%= f.collection_select(:gender, User.genders_i18n, :first, :last)   %>
                        </td>
                    </tr>
                    <tr>
                        <th>
                         年齢
                        </th>
                        <td>
                             　<%= f.number_field :age ,placeholder:'年齢',min:0,max:200,step:0 %> （歳）
                        </td>
                    </tr>
                    <tr>
                        <th>
                          身長
                        </th>
                        <td>
                            　<%= f.number_field :height, placeholder:'身長', min:0,max:250,step:0.1 %> （cm）
                        </td>
                    </tr>
                    <tr>
                        <th>
                            体重
                        </th>
                        <td>
                            　<%= f.number_field :weight, placeholder:'体重', min:0,max:150,step:0.1 %> （kg）
                        </td>
                    </tr>
                    <tr>
                        <th>
                            運動量レベル
                        </th>
                        <td>
                            <select id="momentum"  name="momentum">
                                <option value="1.2">1. 運動を全くしない(運動量レベル1.2)</option>
                                <option value="1.375">2. 週に１～２回軽い運動をする、軽めの運動(運動量レベル1.375)</option>
                                <option value="1.55">3. １週間に２～３回筋トレをする、適度にエクササイズ(運動量レベル1.55)</option>
                                <option value="1.725">4. １週間に４～５回筋トレをする、それなりにハード(運動量レベル1.725)</option>
                                <option value="1.9">5. ほぼ毎日ハードなトレーニング、肉体労働(運動量レベル1.9)</option>
                            </select>
                        </td>
                    </tr>

                </tbody>
            </table>
          
        </div>

      <div class="button-box">
                        <%= link_to '戻る', user_path(current_user) , class: "btn btn-default btn-lg measurement-btn-left" %>
                        <%= f.submit '更新', class: "btn btn-default btn-lg measurement-btn-right" %>
      </div>


    <% end %>

<% else %>
 <%= link_to "ログインしてください", new_user_session_path %>
<% end %>


      
     
</div>