<%= render 'layouts/users_header'%>

  <div class="container objective-bigbox">

    <div class="row">

      <div class="col-md-4 col-md-offset-4 objective-logo">
          <h1>OBJECTIVE</h1>
          <span class="moji">目標</span>
      </div>      

    </div>

    <div class="row objective-box">
      <div class="col-md-6 col-md-offset-3">
          
              <%= form_for @user, url: renew_users_path, method: :patch do |f| %>
                      <%= f.text_area :objective, class: "objective-form" %>
      
              <div class="objective-button-box">
                    
                      <%= link_to '戻る', user_path(current_user), class: "btn btn-default btn-lg objective-back" %>
                    
                      <%= f.submit '更新', class: "btn btn-default btn-lg objective-update" %>
            
              </div>

              <% end %>


      </div>
    </div>
  </div>
