<%= render 'layouts/admins_header' %>




<div class="container">

    <div class="row">

        <div class="col-md-4 col-md-offset-4 mypage-logo">
            <h1>LIST OF USERS</h1>
            <span class="moji">ユーザー一覧</span>
              <br>
              <br>
              <br>   
        </div> 
	
	</div>

	<div class="row">	

    	<div class="col-md-6 col-md-offset-3">

			<table class="user_information_table">
				<tr>
					<th class="user_information_th">ユーザーID</th>
					<th class="user_information_th">ニックネーム名</th>
					<th class="user_information_th">ユーザーのステータス</th>
					<th class="user_information_th">ユーザー詳細情報へ</th>
				</tr>
				<% @users.each do |user| %>
					<tr class="user_information_tr">
						<td class="user_information_td"><%= user.id %></td>
						<td class="user_information_td"><%= user.nickname %></td>
						<td class="user_information_td">
							<% if user.deleted_at %>
								退会中
							<% else %>
								入会中
							<% end %>
						</td>
						<td class="user_information_td">
							<%= link_to 'ユーザー詳細情報', admins_user_path(user.id), class: "btn btn-default btn-sm", id: "user_show" %>

						</td>
					</tr>
				<% end %>
			</table>
		
			<div class='p-top__paginate'><%= paginate @users %></div>
	
			<%= link_to '戻る', admins_admin_path(current_admin) , class: "btn btn-success btn-lg list_of_users_back_btn" %>
        </div>
    </div>
</div>


　　
